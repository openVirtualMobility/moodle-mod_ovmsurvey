{{!
    @template mod_ovmsurvey/review
}}
<div id="ovmsurvey-review-{{uniqid}}" class="ovmsurvey-review" data-region="ovmsurvey-review">    
    <table class="table table-striped table-hover table-results mt-5">
        {{#data}}
            <thead class="thead-dark">
                {{#name}}
                <tr>
                    <th colspan="2" scope="col">
                        <h4>{{{name}}}</h4>
                    </th>
                </tr>
                {{/name}}
            </thead>
            {{#subskills}}
                <tbody>
                    {{#name}}
                    <tr>
                        <th colspan="2" scope="col">
                            <h5>{{{name}}}</h5>
                        </th>
                    </tr>
                    {{/name}}
                    {{#statements}}
                    <tr class="thead-light">
                        <td>
                            {{{stmt}}}
                        </td>
                        <td>
                            {{{response}}}
                        </td>
                    </tr>
                    {{/statements}}
                </tbody>
            {{/subskills}}
        {{/data}}
    </table>
</div>